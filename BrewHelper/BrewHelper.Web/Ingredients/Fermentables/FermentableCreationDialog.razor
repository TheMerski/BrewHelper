<MudDialog>
    <DialogContent>
        <MudForm @ref="@this.Form">
            <FermentableFormFields Fermentable="@this.Fermentable">
            </FermentableFormFields>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit" Disabled="!this.Form?.IsValid ?? true">Save</MudButton>
    </DialogActions>
</MudDialog>