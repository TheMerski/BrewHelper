<MudDialog>
    <DialogContent>
        <MudForm @ref="@this.Form">
            <HopFormFields Hop="@this.Hop">
            </HopFormFields>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit" Disabled="!this.Form?.IsValid ?? true">Save</MudButton>
    </DialogActions>
</MudDialog>