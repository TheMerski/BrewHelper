@using BrewHelper.Data.Entities
@inherits OwningComponentBase

<MudItem xs="12">
    <MudForm @ref="this.Form" @bind-IsValid="@this.IsValid">
        @if (!this.YeastState.Value.IsLoading && this.Yeast != null)
        {
            <YeastFormFields Yeast="@this.Yeast" Editable="@true" YeastChanged="this.SaveYeast"></YeastFormFields>
        }
        else
        {
            <MudProgressCircular Size="Size.Large" Indeterminate="true"/>
        }
    </MudForm>
</MudItem>