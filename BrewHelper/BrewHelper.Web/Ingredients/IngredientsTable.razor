@using BrewHelper.Data.Entities
@inherits Fluxor.Blazor.Web.Components.FluxorComponent


<MudTable
    ServerData="@(new Func<TableState, Task<TableData<Ingredient>>>(this.TableData))"
    Hover="true"
    @ref="@this.Table">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Ingredients</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.Refresh" OnClick="@this.ReloadData" aria-label="refresh"></MudIconButton>
    </ToolBarContent>
    <HeaderContent>
        <MudTh><MudTableSortLabel SortLabel="Name" T="@Ingredient">Name</MudTableSortLabel></MudTh>
        <MudTh>In Stock</MudTh>
        <MudTh>Type</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd>@context.Name</MudTd>
        <MudTd>@context.InStock</MudTd>
        <MudTd>@context.Type.ToString()</MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager/>
    </PagerContent>
</MudTable>